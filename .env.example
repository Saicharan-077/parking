# Database Configuration
DATABASE_URL=./parking.db

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters

# Email Configuration
ADMIN_EMAIL=your-admin-email@vnrvjiet.in
ADMIN_PASS=your-app-specific-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin User Configuration (for scripts)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# Test User Configuration (for scripts)
USER_USERNAME=testuser
USER_EMAIL=testuser@vnrvjiet.in
USER_PASSWORD=your-secure-test-password

# Test Configuration (for test files)
TEST_EMAIL=test@vnrvjiet.in
TEST_PASSWORD=your-test-password
TEST_TOKEN=your-test-jwt-token

# Server Configuration
PORT=5001
NODE_ENV=development

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MS=900000